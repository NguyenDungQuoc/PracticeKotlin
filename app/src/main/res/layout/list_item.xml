<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="4dp"
    app:cardPreventCornerOverlap="false">


    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:id="@+id/imgViewFood"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/cherries"/>
        
        <TextView
            android:id="@+id/textViewFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cherry"
            android:layout_toEndOf="@+id/imgViewFood"
            android:layout_toRightOf="@+id/imgViewFood"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewPriceFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gia"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/imgViewFood"
            android:layout_below="@+id/textViewFoodName"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>